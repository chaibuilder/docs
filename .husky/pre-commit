#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”„ Running docs.json generator..."

# Run the script to generate docs.json
pnpm generate-docs-json

# Check if the script executed successfully
if [ $? -ne 0 ]; then
  echo "âŒ Failed to generate docs.json"
  exit 1
fi

